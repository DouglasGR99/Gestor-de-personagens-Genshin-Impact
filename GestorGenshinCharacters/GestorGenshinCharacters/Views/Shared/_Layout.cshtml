<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- TITULO DO SITE -->
    <title>@ViewData["Title"] - Gestor de personagens Genshin Impact</title>
    <!-- VVV bootstrap vers atual VVV -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestorGenshinCharacters.styles.css" asp-append-version="true" />
</head>
<body class="background-image-padrao" ng-app="GestorGenshinCharacters">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- TITULO DA NAVBAR -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gestor de personagens</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- PAGINAS NAVEGAVEIS -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Personagem" asp-action="Index">Personagens</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="max-width:1400px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- RODAPE DAS PAGINAS -->
    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2023 - Gestor de personagens de RPG <!-- - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- VVV js do bootstrap VVV -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="/js/AngularController/main.js"></script>
    <script src="/js/AngularController/PersonagemController.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
